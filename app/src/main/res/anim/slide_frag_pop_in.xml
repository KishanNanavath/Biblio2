<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromYScale="1"
        android:toYScale="1"
        android:startOffset="@integer/animDur"
        android:duration="@integer/animDur"
        android:fromXScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1" />

    <alpha
        android:duration="@integer/animDur"
        android:fromAlpha="0"
        android:toAlpha="1" />
</set>