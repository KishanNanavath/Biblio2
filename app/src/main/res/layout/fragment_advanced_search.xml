<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Title" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView2"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchTitle"
                android:text="Author" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchAuthor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView3"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchAuthor"
                android:text="Keywords..." />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchKeywords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView4"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchKeywords"
                android:text="ISBN No" />

            <EditText
                android:singleLine="true"
                android:inputType="number"
                android:imeOptions="actionSearch"
                android:id="@+id/etIsbn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4" />

            <!--
            <Button
                android:id="@+id/bSearchFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/etIsbn"
                android:text="Search" />
            !-->

        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>