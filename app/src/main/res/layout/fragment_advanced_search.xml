<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/AlertDialog.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android">


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Title" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView2"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchTitle"
                android:text="Author" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchAuthor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView3"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchAuthor"
                android:text="Keywords..." />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etSearchKeywords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView4"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etSearchKeywords"
                android:text="ISBN No" />

            <EditText
                android:singleLine="true"
                android:inputType="number"
                android:imeOptions="actionSearch"
                android:id="@+id/etIsbn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView5"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etIsbn"
                android:text="Genre" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5" />


            <TextView
                android:visibility="gone"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView6"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etCategory"
                android:text="Print Type" />

            <EditText
                android:visibility="gone"
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etPrintType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6" />

            <TextView
                android:textColor="@color/primaryTextColor"
                android:id="@+id/textView7"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etPrintType"
                android:text="Publisher" />

            <EditText
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:id="@+id/etPublisher"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView7" />

            <Button
                android:textColor="@color/primaryTextColor"
                android:background="@color/accentColor"
                android:id="@+id/bClearFilter"
                android:text="Clear Filters"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPublisher" />

            <!--
            <Button
                android:id="@+id/bSearchFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/etIsbn"
                android:text="Search" />
            !-->

        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>
</LinearLayout>
